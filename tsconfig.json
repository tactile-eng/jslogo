{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "isolatedModules": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./lib",
        "allowJs": true
    },
    "include": [
        "./src/**/*"
    ]
}